@import '../node_modules/jeet/stylus/jeet/index'
@import 'globals'
@import 'header'
@import 'footer'
@import 'aside'
@import 'actions'

body
	background-color rgba(239,239,239,.4)
	color text-color
	font-family 'Open Sans', sans-serif
	padding 0px
	margin 0px
	padding-bottom 30px

	h1, h2, h3, h4, h5, h6
		color titles-color
	a
		color #2980b9
#principal-map
	span(1/1)
	position relative
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	background-color #fff
.map-loader
	span(1/1)
	height 450px
	position absolute
	background-color rgba(0, 0, 0, .5)
	z-index 999
	top 60px
	.spinner
		position absolute
		left calc(50% - 30px)
		border 5px solid #f3f3f3
		border-top 5px solid #3498db
		border-radius 50%
		width 60px
		height 60px
		animation spin 1s linear infinite
		top 170px
#add-place
	margin-top	10px
#home-map
	height 450px!important
	span(1/1)
.pac-container.pac-logo
	zoom 1.5
	&.small
		zoom 1
.search-place
	width 360px
	height 60px
	position absolute
	background-color #fff
	border-radius 2px
	top 70px
	z-index 999999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	transition .2s linear all
	&.initial
		zoom 1.5
		left calc(50% - 190px)

	label
		background-color #7f8c8d
		span(1/1)
		color #fff
		font-size 14px
		padding 10px
		box-sizing border-box
		border-radius 2px 2px 0px 0px

	input[type="text"]
		span(1/1)
		border none
		font-size 16px
		padding 10px
		box-sizing border-box
.container
	width 90%
	max-width 600px
	margin 0 auto
	.col,.col-100
		span(1/2)
		box-sizing border-box
		padding 0px 10px
		label
			color #000
			span(1/1)
			margint-bottom 5px
		input[type="text"]
			span(1/1)
			border 1px solid #efefef
			padding 10px
			border-radius 3px
			margint-bottom 15px
			box-sizing border-box
	.col-100
		span(1/1)
.content
	center(1200px)
	aside
		width 25%
		float left
		margin-left 3%
		.aside-twitter
			max-height 800px
			overflow scroll
			span(1/1)
		.counter
			span(1/1)
			div
				span
					padding 10px 0px
					color #fff
					background-color #7f8c8d
					border-radius 2px
					span(1/1)
					&.actives
						background-color #34495e
					&.controlled
						background-color #f1c40f
					&.killed
						background-color #2ecc71
					&.combat
						background-color #c0392b

				strong
					font-weight 100
					color #000
			.half
				col(1/2)
				width 45%
				text-align center
			.complete
				col(1/1)
				text-align center
				width 93%
	.campaign-container
		width 70%
		display flex
		flex-flow  row wrap
		justify-content space-between
		align-items stretch
		float left
	h1
		span(1/1)
		font-family 'Raleway', sans-serif
		font-size 30px
		font-weight 100
	.campaign
		width 32%
		background-color #fff
		min-height 140px
		position relative
		margin-bottom 15px
		box-shadow 0 0 2px 1px rgba(0,0,0,.1)
		padding-bottom 50px
		figure
			span(1/1)
			padding 0px
			margin 0px
			img
				width 100%
		h2
			margin 0px
			font-size 13px
		p
			font-size 13px
		.text
			span(1/1)
			padding 10px
			box-sizing border-box
		a
			text-decoration none
			cursor pointer
			p
				color #999
		.action
			background-color #2ecc71
			padding 10px
			color #fff
			text-decoration none
			display inline-block
			margin-left 10px
			position absolute
			bottom 10px
			right 10px
			font-size 13px
.start-location
	width 400px
	position absolute
	top 160px
	z-index 9999
	background-color #fff
	border-radius 3px
	padding 10px
	left calc(50% - 200px)
	box-shadow 0 0 10px 0 rgba(0, 0, 0, .5)
	strong
		span(1/1)
	input
		&[type="text"]
			border-radius 2px
			padding 10px
			span(1/1)
			box-sizing border-box
			border 1px solid #efefef
.trip
	width 360px
	position absolute
	background-color #fff
	top 75px
	z-index 999
	right 10px
	h2
		background-color #373e46
		span(1/1)
		color #fff
		font-size 14px
		padding 17px 10px
		box-sizing border-box
		border-radius 2px 2px 0px 0px
		margin 0px
		font-weight 100
	#indications
		font-size 12px
		max-height 380px
		overflow scroll
		span(1/1)
		.adp-marker
			width 11px
			height 17px
			margin 10px
		.adp-directions
			width 100%

.placeInfo
	width 360px
	position absolute
	background-color #fff
	border-radius 2px
	top 160px
	z-index 999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)

	h1, h2
		padding 0px
		margin 0px
		span(1/1)
	h1
		font-size 16px
		padding 10px
		box-sizing border-box
		font-weight 100
		border-bottom 1px dotted #95a5a6
	h2
		font-size 14px
		padding 10px
		font-weight 100
		box-sizing border-box
		color #7f8c8d
	ul
		padding 10px
		margin 0px

		li
			display inline-block
			background-color #2ecc71
			font-size 10px
			border-radius 10px
			padding 5px
			color #fff
			margin-right 5px
.onemi-alerts
	list-style none
	padding 0px
	li
		span(1/1)
		border-bottom 1px dotted #efefef
		padding 10px
		box-sizing border-box
		a
			text-decoration none

		img
			width  30px
			float left
			margin-right 10px
		strong
			font-weight 100
			.place
				font-weight bolder
				color #000
#more-help
	span(1/1)
	text-align center
	background-color #2c3e50
	color #fff
	padding 50px 0px
	font-weight 100
	h2, h3
		color #fff
		font-weight 100
	a
		text-decoration none
		color #ecf0f1

#news
	article
		font-size 12px
		border-bottom 1px solid #ccc
		padding 20px 0px
		a
			text-decoration none
			strong
				color #000
				font-size 14px
			p
				font-size 12px
				color #999


@keyframes spin
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)

.hide-map
	margin-top -5px
	position relative
	background-color #ffc234
	height 30px
	width 100%
	text-align center
	.hide-map-text-container
		position absolute
		top -15px
		margin-left -52px
		background-color #ffc334
		padding 6px 17px
		border-radius 3px
		&:hover
			cursor pointer
		p
			font-size 10px
			border-top 1px solid black
			border-bottom 1px solid black
			display inline-block
			margin 0
			color #000
			text-transform uppercase
			font-weight 300

.actual-situation
	background-color #feefc4
	.actual-situation-flex
		display block
		// justify-content space-around
		max-width 1200px
		margin 0 auto
		color white
		text-align center
		h3
			color white
			font-size 40px
			margin 0
		p
			margin 0
			text-transform uppercase

.actual-situation-box
	display inline-block
	width 14%
	padding 10px
	margin-top 20px
	margin-bottom 20px

.afected-areas
	display inline-block
	width 26%
	background-color grey

.actual-situation-box.active
	background-color #c0392b

.actual-situation-box.fighting
	background-color #ff440d

.actual-situation-box.controlled
	background-color #ffc334

.actual-situation-box.extinguish
	background-color #3f9500

.campaing-flex
	display flex
	flex-flow row wrap
	margin 10px 0 50px 0
	h2
		text-transform uppercase

.campaigns-and-donations
	flex 2
	padding-left 10px

.card
	display inline-block
	width 46.5%
	background-color white
	margin 5px
	padding 5px
	box-shadow 0 1px 1px rgba(0, 0, 0, 0.3)
	a
		text-decoration none

.card-flex
	display flex
	flex-flow row wrap
	img
		display inline-block
		height 110px
		margin 0
		margin-right 10px
	.card-text
		display inline-block
		flex 2.5
		h4
			margin 0
		p
			margin 0
			color black
			font-size 10px
		.campaign-url
			margin-top 10px

.onemi-news-container
	flex 1
	padding-right 10px
	h2
		display inline-block
	p
		display inline-block
		font-size 10px
		color black
	.onemi-news
		height 360px
		margin-top 5px
		background-color white
		box-shadow 0 1px 1px rgba(0, 0, 0, 0.3)
		padding: 10px

.partners
	background-color white
	margin-top 10px

.partners
	padding 30px 0
	.content
		text-align center
		.partners-flex
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-around
			a
				font-size 0
				figure
					display inline-block
					width 60px
					margin 40px 20px
					img
						width 100%




@media screen and (max-width: 1220px)

	.onemi-news-container
		p
			display none

@media screen and (max-width: 980px)

	.actual-situation-flex
		p
			font-size 12px

	.card
		width 96%

	.campaigns-and-donations
		flex 1

	.onemi-news-container
		margin-left 10px

	.partners-flex
		a
			figure
				width 50px

@media screen and (max-width: 670px)

	.actual-situation
		.actual-situation-flex
			padding-bottom 1px
			h3
				font-size 30px
			p
				font-size 8px

	.actual-situation-flex
		display inline-block ! important

	.actual-situation-box
		width 17%

	.afected-areas
		display block
		margin 0 auto
		width: 80%
		margin-bottom 20px

	.card-flex
		img
			height 80px

	.campaigns-and-donations
		flex 100%
		padding-left 5px
		padding-right 5px

	.partners-flex
		a
			figure
				margin 20px 10px  !important
